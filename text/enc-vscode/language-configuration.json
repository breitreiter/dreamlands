{
  "brackets": [
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "*", "close": "*" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "(^\\s*\\*\\s|.*\\{\\s*$)",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
